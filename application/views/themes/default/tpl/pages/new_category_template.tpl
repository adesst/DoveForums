<div class="panel panel-primary">
    <div class="panel-heading">
        <p class="lead">
            <strong>New Category</strong>
        </p>
    </div>
    <div class="panel-body">
        {form_open}
            <div class="form-group">
                {category_name_label}
                {category_name_field}
            </div>
            <div class="form-group">
                {category_description_label}
                {category_description_field}
            </div>
            <div class="form-group">
                <div class="pull-right">
                    {clear_button}
                    {submit_button}
                </div>
            </div>
        {form_close}
    </div>
</div>
